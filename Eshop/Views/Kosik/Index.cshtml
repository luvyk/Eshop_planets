<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<div class="container mt-5" style="max-width: 1200px; background: #f4f4f4">
    <h1 class="mb-4">Shopping Cart</h1>
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach(Planeta planeta in Model)
                {
                    string path = $"/img/{planeta.Id}.png";
                    <tr>
                        <form asp-controller="Kosik" asp-action="DeleteOrder" asp-route-id="@planeta.Id">
                        <td><img style="max-width= 40px" src="@path" alt="Product A" class="img-fluid"></td>
                        <td> @planeta.Nazev </td>
                        <td> @planeta.Cena</td>
                        <td><input name="pocet" type="number" class="form-control" value="1" min="1"> <input type="hidden" name="GUID" value="@ViewBag.GUID" /> <input type="hidden" name="IdKos" value="@ViewBag.IdKos" /> </td>
                        <td><button type="submit" class="btn btn-danger">Remove</button></td>
                        </form>
                    </tr>
                }
                @*
                <tr>
                    <td><img src="https://via.placeholder.com/80" alt="Product B" class="img-fluid"></td>
                    <td>Product B</td>
                    <td>$49.99</td>
                    <td><input type="number" class="form-control" value="2" min="1"></td>
                    <td><button class="btn btn-danger">Remove</button></td>
                </tr>
                <tr>
                    <td><img src="https://via.placeholder.com/80" alt="Product C" class="img-fluid"></td>
                    <td>Product C</td>
                    <td>$19.99</td>
                    <td><input type="number" class="form-control" value="1" min="1"></td>
                    <td><button class="btn btn-danger">Remove</button></td>
                </tr>
                *@
            </tbody>
        </table>
    </div>
    <div class="d-flex justify-content-between mt-4 border-top pt-3">
        <h2> @ViewBag.Soucet cr.</h2>
        <form asp-controller="Kosik" asp-action="Obednavka" asp-route-id="">
            <input type="hidden" name="GUID" value="@ViewBag.GUID" /> <input type="hidden" name="IdKos" value="@ViewBag.IdKos" />
        <button type="submit" class="btn btn-primary">Checkout</button>
        </form>
    </div>
</div>
