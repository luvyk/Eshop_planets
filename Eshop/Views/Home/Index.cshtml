                                            <h5 class="card-title">@produkt.Nazev</h5>
                                            <p class="card-text">@produkt.Cena</p>
                                        </div>
                                    </a>
                            <a asp-controller="Kosik" asp-action="AddToCartAction" asp-route-id="@produkt.Id" class="btn btn-success">
                                        <img src="https://cdn-icons-png.flaticon.com/512/263/263142.png" width="20" alt="Cart Icon"> Add to Cart
                                    </a>
                                </div>
